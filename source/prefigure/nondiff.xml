<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>f(x)=sqrt((x^2-4)^2)</definition>
  <definition>g(x)=2*x*sqrt((x^2-4)^2)/(x^2-4)</definition>
  <definition>H(x,y)=x-y</definition>

  <definition>a = 0 </definition>
  <coordinates bbox="(-5,-5,5,5)">
    <grid-axes xlabel="x" ylabel="y"/>
    <graph function="f" label="f"/> 
    <graph function="g" stroke="green" domain="(-1.99,1.99)"/>
    <graph function="g" stroke="red" domain="(-5,-2.1)"/>
    <graph function="g" stroke="red" domain="(2.1,5)"/>
    <!-- <tangent-line function="f" point="a"/> -->
    <point p="(a,f(a))" alignment="ne">
      <m>(a,f(a))</m>
    </point>
    <!--<slope-field function="H" stroke="green"/>-->
  </coordinates>
</diagram>